# Solana Pulse Dashboard Environment Variables
# Copy this file to .env.local and update the values

# Validator RPC Endpoint
# For local development (default)
NEXT_PUBLIC_VALIDATOR_RPC=http://127.0.0.1:8899

# For remote access via ngrok or VPS
# NEXT_PUBLIC_VALIDATOR_RPC=https://your-ngrok-url.ngrok-free.app
# NEXT_PUBLIC_VALIDATOR_RPC=https://your-vps-domain.com:8899

# Optional: WebSocket endpoint
# NEXT_PUBLIC_VALIDATOR_WS=ws://127.0.0.1:8900

# Production deployment settings
# NODE_ENV=production